{
  "name": "@launcherg/content-scripts-dmm",
  "type": "module",
  "version": "1.0.0",
  "description": "DMM content script for Launcherg browser extension",
  "scripts": {
    "prebuild": "pnpm -C ../.. run format && pnpm run typecheck && pnpm -C ../.. run lint",
    "build": "pnpm run prebuild && vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "pnpm -C ../.. run format",
    "lint": "pnpm -C ../.. run lint"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "@launcherg/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.5",
    "jsdom": "^26.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
