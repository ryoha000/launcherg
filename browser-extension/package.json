{
  "name": "launcherg-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for syncing DL store games to Launcherg",
  "scripts": {
    "build": "npm run protobuf:generate && vite build",
    "dev": "npm run protobuf:generate && vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "clean": "rimraf dist",
    "protobuf:generate": "buf generate --template ../proto/buf.gen.yaml ../proto",
    "protobuf:lint": "buf lint ../proto",
    "protobuf:format": "buf format -w ../proto"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.47.0",
    "@bufbuild/protoc-gen-es": "^2.0.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
